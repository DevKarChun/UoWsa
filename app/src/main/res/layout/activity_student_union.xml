                android:scaleType="fitStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/studentUnionTitle"
                app:srcCompat="@drawable/ic_studentunionimage"
                android:contentDescription="@string/studentUnion" />

            <ImageButton
