<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorSecondary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="90dp">


            <TextView
                android:id="@+id/discussionBoardTitle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/titlebar"
                android:paddingStart="32dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/discussionBoard"
                android:fontFamily="@font/merriweather_black"
                android:textColor="?colorAccent"
                android:textSize="34sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/hangoutTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/hangout"
                android:textColor="?colorAccent"
                android:textSize="20sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/discussionBoardTitle" />

            <Button
                android:id="@+id/generalBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:backgroundTint="?colorSecondary"
                android:drawableLeft="@drawable/ic_general"
                android:drawableTint="?colorSecondaryVariant"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/general"
                android:textAlignment="textStart"
                android:textColor="?colorAccent"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hangoutTxt" />

            <Button
                android:id="@+id/makeNewFriendsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="?colorSecondary"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_makenewfriends"
                android:drawableTint="?colorSecondaryVariant"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/makeNewFriends"
                android:textAlignment="textStart"
                android:textColor="?colorAccent"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/generalBtn" />

            <Button
                android:id="@+id/studentWellbeingBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="?colorSecondary"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_student_wellbeing_icon"
                android:drawableTint="?colorSecondaryVariant"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/studentWellbeing"
                android:textAlignment="textStart"
                android:textColor="?colorAccent"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/makeNewFriendsBtn" />

            <TextView
                android:id="@+id/discussionForumTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/discussionforums"
                android:textColor="?colorAccent"
                android:textSize="20sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/studentWellbeingBtn" />

            <Button
                android:id="@+id/studyBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="?colorSecondary"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_study"
                android:drawableTint="?colorSecondaryVariant"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/study"
                android:textAlignment="textStart"
                android:textColor="?colorAccent"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/discussionForumTxt" />


            <Button
                android:id="@+id/eventsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="?colorSecondary"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_event"
                android:drawableTint="?colorSecondaryVariant"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/events"
                android:textAlignment="textStart"
                android:textColor="?colorAccent"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/studyBtn" />

            <Button
                android:id="@+id/accommodationBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="?colorSecondary"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_accommodation"
                android:drawableTint="?colorSecondaryVariant"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/accommodation"
                android:textAlignment="textStart"
                android:textColor="?colorAccent"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/eventsBtn" />

            <Button
                android:id="@+id/studentUnionBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="?colorSecondary"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_students_union"
                android:drawableTint="?colorSecondaryVariant"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/studentUnion"
                android:textAlignment="textStart"
                android:textColor="?colorAccent"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/accommodationBtn" />

            <Button
                android:id="@+id/clubsAndSocietiesBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="?colorSecondary"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_clubs_and_societies"
                android:drawableTint="?colorSecondaryVariant"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/clubsAndSocieties"
                android:textAlignment="textStart"
                android:textColor="?colorAccent"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/studentUnionBtn" />

            <Button
                android:id="@+id/cavendishCampusBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="?colorSecondary"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_campus"
                android:drawableTint="?colorSecondaryVariant"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/cavendishCampus"
                android:textAlignment="textStart"
                android:textColor="?colorAccent"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clubsAndSocietiesBtn" />

            <Button
                android:id="@+id/harrowCampusBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="?colorSecondary"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_campus"
                android:drawableTint="?colorSecondaryVariant"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/harrowCampus"
                android:textAlignment="textStart"
                android:textColor="?colorAccent"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cavendishCampusBtn" />

            <Button
                android:id="@+id/regentsCampusBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="?colorSecondary"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_campus"
                android:drawableTint="?colorSecondaryVariant"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/RegentsCampus"
                android:textAlignment="textStart"
                android:textColor="?colorAccent"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/harrowCampusBtn" />

            <Button
                android:id="@+id/maryleboneCampusBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="?colorSecondary"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_campus"
                android:drawableTint="?colorSecondaryVariant"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/MaryleboneCampus"
                android:textAlignment="textStart"
                android:textColor="?colorAccent"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/regentsCampusBtn" />

            <Button
                android:id="@+id/otherBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="?colorSecondary"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_other"
                android:drawableTint="?colorSecondaryVariant"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/other"
                android:textAlignment="textStart"
                android:textColor="?colorAccent"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/maryleboneCampusBtn" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <TextView
        android:id="@+id/bottomMenu"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bottom_menu"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/bottomMenuShape"
        android:layout_width="421dp"
        android:layout_height="60dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/navshape"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"/>

    <ImageButton
        android:id="@+id/navHomeBtn"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="?colorSurface"
        android:src="@drawable/ic_home"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/home"
        app:tint="?colorAccent" />

    <ImageButton
        android:id="@+id/navProfileBtn"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="?colorSurface"
        android:src="@drawable/ic_profile"
        android:layout_toEndOf="@+id/navHomeBtn"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/profile"
        app:tint="?colorAccent"/>

    <ImageButton
        android:id="@+id/navUowMessage"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="?colorSurface"
        android:src="@drawable/ic_uow_message_icon1"
        android:layout_toEndOf="@+id/navProfileBtn"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/uowMessage"
        app:tint="?colorAccent"/>

    <ImageButton
        android:id="@+id/navSettings"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="?colorSurface"
        android:src="@drawable/ic_settings"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/settings"
        app:tint="?colorAccent"/>

</RelativeLayout>